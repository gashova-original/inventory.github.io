<!-- Modal -->
<div class="modal" id="auth_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Вход</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<form id='auth_form' class="form-inline p-3" method='POST' action='/auth'>
				<div class="form-group mr-2">
					<label for="auth-key" class = "mr-2">Пароль:</label>
					<input id='auth-key' class="form-control d-inline" name = 'key' placeholder='secret key'/>
				</div>
				<button type='submit' class="btn btn-primary">Войти</button>
			</form>
		</div>
	</div>
</div>